{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "types": ["chrome"],
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "noEmitOnError": false,
    "strict": true,
    "allowUmdGlobalAccess": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "*": ["src/*", "types/*"]
    }
  },
  "include": ["src/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
